<!DOCTYPE html>
<html>
<head>
  <title>Rantly</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:400,900|Laila:700|Hind:200' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<body>

  <div class= "navbar">
    <div class="container">
         <%=link_to "Rantly", root_path %></a>
            <span><%= link_to "Rants", root_path %></span>
            <span><%= link_to "Users", users_path %></span>
            <span><%= link_to "Sign Up", signup_path %></span>

            <span><%= link_to "Sign In", signin_path %>

           <% if current_user %>
              <span class = "pull-right"><%= current_user.first_name %></span>
              <span><%= link_to "Sign out", signout_path %></span>
           <% end %>
    </div>
  </div>

           <!-- <%= form_tag("/search", method: "get") do %>
           <%= label_tag(:q, "Search for:") %>
           <%= text_field_tag(:q, nil, :placeholder => "Search") %>
           <%= submit_tag("Search") %>
           <% end %> -->
  <div class="header">
    <div class="container">

       <%= form_tag search_path, class:"search", :method => 'get' do %>
         <% if params[:search] == "" %>
           <%= text_field_tag :search, params[:search], placeholder: "This can't be blank!", class: "search" %>
       <% else %>
         <%= text_field_tag :search, params[:search], placeholder: "Search", class: "search" %>
       <% end %>
         <!-- <%= submit_tag "Search", :name => nil, class: "btn btn-warning" %> -->
       <% end %>

           <%= link_to "New Rant", new_rant_path, class: "new-button" %>
    </div>
  </div>


  <div class="rcontainer">

    <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
    <% end %>

    <span class="scroll"><%= yield %></span>
  </div>

</body>
</html>
